LIBDIR = rust/target/release
STATLIB = $(LIBDIR)/libperpetual_r.a
PKG_LIBS = -L$(LIBDIR) -lperpetual_r

$(SHLIB): $(STATLIB)

$(STATLIB):
	@echo "Building Rust library for Unix/macOS..."
	rustc --version
	cd rust && CARGO_HOME=../../inst/c cargo build --release --lib --verbose

clean:
	rm -rf rust/target
